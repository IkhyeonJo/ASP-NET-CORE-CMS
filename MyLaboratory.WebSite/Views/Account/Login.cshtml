@using MyLaboratory.WebSite.Models.ViewModels.Account

@model LoginOutputViewModel

@{
    var error = TempData["Error"] as string;
}

<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="#" class="h1"><b>My</b>Laboratory</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">@localizer["Sign in to start your session"]</p>
            <form id="loginForm" class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    <input asp-for="Email" type="email" class="form-control" placeholder="@localizer["Email"]" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <input id="Password" name="Password" maxlength="100" type="password" class="form-control" placeholder="@localizer["Password"]" />
                </div>
                <div class="row">
                    <div class="col-4">
                        <div>
                            <a onclick="ChangeCulture('en-US')" style="cursor: pointer;">
                                <img src="~/anonymous/images/us.jpg" style="height: 42px !important; padding-bottom: 4px !important;" />
                            </a>
                            <a onclick="ChangeCulture('ko-KR')" style="cursor: pointer;">
                                <img src="~/anonymous/images/kr.jpg" style="height: 42px !important; padding-bottom: 4px !important; padding-left: 3px !important;" />
                            </a>
                        </div>
                    </div>
                    <div class="col-8">
                        <button type="submit" class="btn btn-primary btn-block" onclick="ShowLoginLoading()">
                            <i class="fas fa-sign-in-alt" style="padding-right:6px;"></i>@localizer["Sign In"]
                        </button>
                    </div>
                </div>
            </form>

            <div class="social-auth-links text-center mt-2 mb-3">
                <a asp-controller="Account" asp-action="Register" class="btn btn-block btn-primary">
                    <i class="fas fa-user-plus" style="padding-right:3px;"></i>@localizer["Sign up"]
                </a>
                <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-block btn-danger">
                    <i class="fas fa-key" style="padding-right:3px;"></i>@localizer["Forgot password"]
                </a>
            </div>

            <p class="mb-0">
                <font style="font-weight:bold" color="red">@error</font>
            </p>
        </div>
    </div>
</div>
<div class="modal" id="loading">
    <img src="~/anonymous/custom/Account/img/ajax-loader.gif" />
</div>
@section Scripts{
    <script src="~/anonymous/custom/Account/js/site.js" asp-append-version="true"></script>
}